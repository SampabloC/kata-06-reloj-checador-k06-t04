<div class="d-flex justify-content-center">
  <%= form_for(@company) do |company| %>
    <div>
      <div class="form-group mt-5">
        <%= company.label :name_company, class: "form-label"%>
        <%= company.text_field :name_company, style: "border-radius: 25px; box-shadow: none !important; border: 2px solid #DE108D !important;"%>
      </div>

      <div class="form-group mt-5">
        <%= company.label :address, class: "form-label"%>
        <%= company.text_field :address, style: "border-radius: 25px; box-shadow: none !important; border: 2px solid #0A139E !important;"%>
      </div>

      <%= company.submit "Save", class: "btn btn-success"%>
    </div>
  <% end %>
</div>
<div class="buttons">
  <%= link_to "Back", companies_path, class: "btn btn-info" %>
</div>
